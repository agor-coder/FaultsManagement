    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/fault/editFault.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>faultList</from-outcome>
            <to-view-id>/fault/faultList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/accountList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>changePassword</from-outcome>
            <to-view-id>/account/changePassword.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/changePassword.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountList</from-outcome>
            <to-view-id>/account/accountList.xhtml</to-view-id>
