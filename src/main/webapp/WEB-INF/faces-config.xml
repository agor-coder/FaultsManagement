<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>
            i18n.jsf_messages
        </message-bundle>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/newSpecialist.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newSpecialistConfirm</from-outcome>
            <to-view-id>/account/newSpecialistConfirm.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/newNotifier.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newNotifierConfirm</from-outcome>
            <to-view-id>/account/newNotifierConfirm.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/newAssigner.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>newAssignerConfirm</from-outcome>
            <to-view-id>/account/newAssignerConfirm.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/specialist/specList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editSpecialist</from-outcome>
            <to-view-id>/specialist/editSpecialist.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/specialist/editSpecialist.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>specList</from-outcome>
            <to-view-id>/specialist/specList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/account/accountList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>editAccount</from-outcome>
            <to-view-id>/account/editAccount.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/account/editAccount.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountList</from-outcome>
            <to-view-id>/account/accountList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/accountList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>changePassword</from-outcome>
            <to-view-id>/account/changePassword.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/account/changePassword.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>accountList</from-outcome>
            <to-view-id>/account/accountList.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
</faces-config>
